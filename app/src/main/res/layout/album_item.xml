    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <TextView
        android:id="@+id/textview_album_title"
        style="@style/album_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/textview_album_artist"
        style="@style/album_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>